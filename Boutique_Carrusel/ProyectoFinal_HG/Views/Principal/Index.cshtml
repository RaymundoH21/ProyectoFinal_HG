@model IEnumerable<ProyectoFinal_HG.Models.Ropa>
@{
    ViewBag.Title = "Inicio";
}

<!-- Bootstrap core CSS -->
<link href="~/Content/bootstrap.min.css" rel="stylesheet">

<!-- Custom styles for this template -->
<link href="~/Content/shop-homepage.css" rel="stylesheet">

<div class="jumbotron">
    <h1>Bienvenido a la pagina de boutique</h1>
    <p class="lead">Ropa elegante y brillante</p>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-3">

            <h1 class="my-4">Categorias</h1>
            <div class="list-group">
                <a href="#" class="list-group-item">Vestidos largos</a>
                <a href="#" class="list-group-item">Accesorios</a>
                <a href="#" class="list-group-item">Trajes</a>
            </div>
        </div>
        <div class="col-lg-9">
            <section class="Ropas-section bg-black">
                <div class="container">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-4 mb-3 mb-md-0">
                                <div class="card py-4 h-100">
                                    @if (item.Picture != null)
                                    {
                                        <img src="~/Upload/Ropa/@item.Picture" class="img-fluid" />
}
else
{
                                <img src="https://cdn.pixabay.com/photo/2016/04/19/13/39/store-1338629_960_720.jpg" alt="" class="img-fluid" />
                            }
                                    <div class="card-body text-center">
                                        <i class="fas fa-tags text-primario mb2"></i>
                                        <h4 class="text-uppercase m-0">@item.Modista.Name</h4>
                                        <hr class="my-4" />
                                        <div class="small text-black-50 ml">@item.Descripcion, @item.Precio</div>
                                    </div>
                                    <div class="card-footer">
                                        <a href="@Url.Action("Details","Ropas", new {id= item.Id})" class="btn btn-sm btn-info">Mas...</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/bootstrap.bundle.min.js"></script>
