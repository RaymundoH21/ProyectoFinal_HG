@model ProyectoFinal_HG.Models.ApplicationUser
@{
    ViewBag.Title = "Perfil";
}

<div class="row justify-content-center mt-3 py-5">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header bg-primario">
                <h4 class="m-0 text-center text-white">Perfil @User.Identity.Name</h4>
            </div>
            <div class="card-body">
                <div class="row justify-content-between">
                    <div class="col-md-6">
                        <div class="card">
                            <img src="~/Upload/@Model.Photo" alt="Picture" class="rounded img-fluid" />
                            <form class="form-horizontal" action="@Url.Action("Picture","Profile")" method="post" enctype="multipart/form-data">
                                <input type="file" value="" name="pic" class="form-control">
                                <input type="submit" value="Guardar Foto" class="form-control"/>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header py-2 bg-primario">
                                <b class="text-center m-0 text-white">Informacion Principal</b>
                                <button class="btn btn-sm btn-outline-light float-right" data-toggle="modal" data-target="#exampleModal">Editar</button>

                            </div>
                            <div class="card-body">
                                <table class="table table-borderless table-sm">
                                    <tr>
                                        <td>Nombre:</td>
                                        <td>@Model.Name</td>
                                    </tr>
                                    <tr>
                                        <td>Correo:</td>
                                        <td>@Model.Email</td>
                                    </tr>
                                    <tr>
                                        <td>Usuario:</td>
                                        <td>@Model.UserName</td>
                                    </tr>
                                    <tr>
                                        <td>Telefono:</td>
                                        <td>@Model.PhoneNumber</td>
                                    </tr>
                                    <hr />
                                </table>
                                <hr />
                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <td>Descripcion:</td>
                                    </tr>
                                    <tr>
                                        <td>@Model.Descripcion</td>
                                    </tr>
                                    <tr>
                                        <td>Ropa Favorita:</td>
                                    </tr>
                                    <tr>
                                        <td>@Model.Ropa</td>
                                    </tr>
                                    <tr>
                                        <td>Hobbies:</td>
                                    </tr>
                                    <tr>
                                        <td>@Model.Hobbies</td>
                                    <tr>
                                        <td>Pasarelas Favoritas:</td>
                                    </tr>
                                    <tr>
                                        <td>@Model.Videos</td>
                                    </tr>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modificar Informacion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="@Url.Action("Details","Profile")" method="post">
                <div class="modal-body">

                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="text" value="" name="Name" placeholder="Nombre Completo" class="form-control">
                        </div>
                        <div class="form-group">
            <input name="PhoneNumber" type="text" class="form-control" placeholder="Telefono">
        </div>
        <div class="form-group">
            <input name="Descripcion" type="text" class="form-control" placeholder="Descripcion">
        </div>
        <div class="form-group">
            <input name="" type="text" class="form-control" placeholder="Ropa Favorita">
        </div>
        <div class="form-group">
            <input name="Hobbies" type="text" class="form-control" placeholder="Hobbies">
        </div>
                        
                    </div>
                            
                </div>
                            
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
        </div>
    </div>
</div>