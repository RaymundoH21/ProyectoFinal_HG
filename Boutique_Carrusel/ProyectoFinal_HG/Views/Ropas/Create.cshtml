@model ProyectoFinal_HG.Models.Ropa

@{
    ViewBag.Title = "Crear articulo";
}

<h2>Crear nuevo articulo</h2>

<form class="" action="@Url.Action("Create","Ropas")" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal mt-5 mb-5">
        <h4 class="bg-primario text-white pb-2">Ropa</h4>
        <hr />
        <label class="col-md-10">Modista</label>
        <div class="col-md-12">
            <select class="form-control" name="DisenadorId" required>
                <option value="">Elige el Diseñador</option>
                @foreach (var item in ViewBag.User)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group colortext">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2 py-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group colortext">
            @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group colortext">
            @Html.LabelFor(model => model.Existencias, htmlAttributes: new { @class = "control-label col-md-2 py-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Existencias, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Existencias, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-10">Categoria</label>
            <div class="col-md-12">
                <select class="form-control" name="CategoriaId" required>
                    <option value="">Elige una Categoria</option>
                    @foreach (var item in ViewBag.Categoria)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>

                <div class="form-group py-2">
                    <label class="col-md-6">Picture</label>
                    <div class="col-md-12">
                        <input name="file" type="file" value="" class="form-control form-control-file" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear articulo" class="btn btn-secondary bg-primario" />
                    <!--<a href=Url.Action(Back to List, Index) class="btn btn-secondary bg-primario text-white">Regresar a la lista</a>-->
                    <div class="btn btn-secondary bg-primario text-white">
                        @Html.ActionLink("Regresar a la lista", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
        



        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
