@model IEnumerable<ProyectoFinal_HG.Models.Ropa>

@{
    ViewBag.Title = "Ropa";
}
<h2>Catalogo</h2>
<p class="mt-4 mb-4">
    @if (User.IsInRole("Administrador"))
    {
        <a href="@Url.Action("Create", "Ropas")" class="btn btn-sm bg-primario text-white"><i class="fas fa-plus-square"></i> Anadir nuevo articulo</a>
    }
</p>
<div class="row justify-content-lg-start">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header text-white bg-primario py-1">
                <h3>Lista de Articulos en el catalogo</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped table-responsive-xl table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Categoria.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Precio)
                        </th>
                        <th>Acciones</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Precio)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Ropas", new { id = item.Id })" title="Editar" class="btn btn-secondary"><i class="fas fa-edit text-white">Editar</i></a>
                                <a href="@Url.Action("Details", "Ropas", new { id = item.Id })" title="Detalles " class="btn btn-secondary"><i class="fas fa-info-circle text-white">Detalles</i></a>
                                <a href="@Url.Action("Delete", "Ropas", new { id = item.Id })" title="Eliminar" class="btn btn-secondary"><i class="fas fa-trash text-white">Eliminar</i></a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
